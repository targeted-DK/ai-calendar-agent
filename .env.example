# ===========================================
# AI Calendar Agent Configuration
# ===========================================

# LLM API Keys (at least one required)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_gemini_api_key_here

# LLM Provider (anthropic, openai, gemini, ollama)
LLM_PROVIDER=anthropic

# Model selection
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
OPENAI_MODEL=gpt-4-turbo-preview
GEMINI_MODEL=gemini-pro
OLLAMA_MODEL=llama2

# Ollama settings (if using local models)
# Note: Use host.docker.internal instead of localhost when running in Docker
OLLAMA_BASE_URL=http://localhost:11434

# Google Calendar credentials file path
# (In Docker, these are mounted at /app/)
GOOGLE_CALENDAR_CREDENTIALS_PATH=credentials.json
GOOGLE_CALENDAR_TOKEN_PATH=token.json

# RAG settings
CHROMADB_PATH=./chroma_db
EMBEDDING_MODEL=text-embedding-3-small

# Garmin Connect credentials
GARMIN_EMAIL=your_garmin_email@example.com
GARMIN_PASSWORD=your_garmin_password

# Timezone
USER_TIMEZONE=America/Chicago

# Database Configuration
POSTGRES_USER=life_agent
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=life_optimization

# Database URL (automatically set in Docker, only needed for local development)
# DATABASE_URL=postgresql://calendar_user:calendar_pass@localhost:5432/calendar_agent
